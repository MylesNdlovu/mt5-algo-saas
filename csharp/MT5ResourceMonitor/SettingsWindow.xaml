<Window x:Class="MT5ResourceMonitor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings - MT5 Resource Monitor"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1a1a1a"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Monitor Settings"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#e5e7eb"
                   Margin="0,0,0,20"/>

        <!-- Settings Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Server Name -->
                <Border Background="#2d2d2d" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Server Name" FontWeight="Bold" Foreground="#e5e7eb" Margin="0,0,0,5"/>
                        <TextBox x:Name="ServerNameBox"
                                 Background="#1f2937"
                                 Foreground="White"
                                 BorderBrush="#374151"
                                 Padding="8"
                                 FontSize="14"/>
                        <TextBlock Text="Display name for this server (e.g., 'Prime VPS', 'Dedicated London')"
                                   FontSize="11"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Terminal Count -->
                <Border Background="#2d2d2d" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Expected Terminal Count" FontWeight="Bold" Foreground="#e5e7eb" Margin="0,0,0,5"/>
                        <TextBox x:Name="TerminalCountBox"
                                 Background="#1f2937"
                                 Foreground="White"
                                 BorderBrush="#374151"
                                 Padding="8"
                                 FontSize="14"/>
                        <TextBlock Text="Number of terminals you plan to run"
                                   FontSize="11"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Install Path -->
                <Border Background="#2d2d2d" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Installation Path" FontWeight="Bold" Foreground="#e5e7eb" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="InstallPathBox"
                                     Grid.Column="0"
                                     Background="#1f2937"
                                     Foreground="White"
                                     BorderBrush="#374151"
                                     Padding="8"
                                     FontSize="14"
                                     Margin="0,0,10,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Click="BrowseButton_Click"
                                    Background="#374151"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="15,8"
                                    Cursor="Hand"/>
                        </Grid>
                        <TextBlock Text="Path where MT5 terminals are installed"
                                   FontSize="11"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Refresh Interval -->
                <Border Background="#2d2d2d" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Refresh Interval (seconds)" FontWeight="Bold" Foreground="#e5e7eb" Margin="0,0,0,5"/>
                        <TextBox x:Name="RefreshIntervalBox"
                                 Background="#1f2937"
                                 Foreground="White"
                                 BorderBrush="#374151"
                                 Padding="8"
                                 FontSize="14"/>
                        <TextBlock Text="How often to update resource usage (1-60 seconds)"
                                   FontSize="11"
                                   Foreground="#6b7280"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Thresholds -->
                <Border Background="#2d2d2d" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Resource Thresholds" FontWeight="Bold" Foreground="#e5e7eb" Margin="0,0,0,10"/>

                        <!-- RAM Warning -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="RAM Warning Threshold (%)" Foreground="#d1d5db" VerticalAlignment="Center"/>
                            <TextBox x:Name="RamWarningBox"
                                     Grid.Column="1"
                                     Background="#1f2937"
                                     Foreground="White"
                                     BorderBrush="#374151"
                                     Padding="8"
                                     FontSize="14"/>
                        </Grid>

                        <!-- RAM Max -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="RAM Maximum Threshold (%)" Foreground="#d1d5db" VerticalAlignment="Center"/>
                            <TextBox x:Name="RamMaxBox"
                                     Grid.Column="1"
                                     Background="#1f2937"
                                     Foreground="White"
                                     BorderBrush="#374151"
                                     Padding="8"
                                     FontSize="14"/>
                        </Grid>

                        <!-- CPU Warning -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="CPU Warning Threshold (%)" Foreground="#d1d5db" VerticalAlignment="Center"/>
                            <TextBox x:Name="CpuWarningBox"
                                     Grid.Column="1"
                                     Background="#1f2937"
                                     Foreground="White"
                                     BorderBrush="#374151"
                                     Padding="8"
                                     FontSize="14"/>
                        </Grid>

                        <!-- CPU Max -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="CPU Maximum Threshold (%)" Foreground="#d1d5db" VerticalAlignment="Center"/>
                            <TextBox x:Name="CpuMaxBox"
                                     Grid.Column="1"
                                     Background="#1f2937"
                                     Foreground="White"
                                     BorderBrush="#374151"
                                     Padding="8"
                                     FontSize="14"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Alerts -->
                <Border Background="#2d2d2d" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <CheckBox x:Name="AlertsCheckBox"
                              Content="Enable alerts when resource usage is high"
                              Foreground="#e5e7eb"
                              FontSize="14"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Save"
                    Click="SaveButton_Click"
                    Background="#10b981"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="30,12"
                    Margin="5,0"
                    FontWeight="Bold"
                    Cursor="Hand"/>

            <Button Grid.Column="2"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Background="#6b7280"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="30,12"
                    Margin="5,0"
                    FontWeight="Bold"
                    Cursor="Hand"/>
        </Grid>
    </Grid>
</Window>
