<Window x:Class="MT5ResourceMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="MT5 Resource Monitor - Scalperium" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f0f">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1a1a1a" BorderBrush="#ef4444" BorderThickness="0,0,0,2" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="SCALPERIUM MT5 RESOURCE MONITOR"
                               Style="{StaticResource HeaderTextStyle}"
                               FontFamily="Consolas"
                               Foreground="#e5e7eb"/>
                    <TextBlock x:Name="ServerNameText"
                               Text="Server: Prime VPS (12GB RAM)"
                               FontSize="12"
                               Foreground="#9ca3af"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="RefreshButton"
                            Content="⟳ Refresh"
                            Click="RefreshButton_Click"
                            Background="#374151"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            Margin="5,0"
                            Cursor="Hand"/>
                    <Button x:Name="SettingsButton"
                            Content="⚙ Settings"
                            Click="SettingsButton_Click"
                            Background="#374151"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,8"
                            Margin="5,0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Cards -->
        <Grid Grid.Row="1" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- RAM Usage Card -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="RAM USAGE" FontWeight="Bold" FontSize="12" Foreground="#9ca3af" Margin="0,0,0,5"/>
                    <TextBlock x:Name="RamUsageText"
                               Text="0.0 / 12.0 GB"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <ProgressBar x:Name="RamProgressBar"
                                 Height="8"
                                 Margin="0,8,0,5"
                                 Foreground="#10b981"
                                 Background="#374151"/>
                    <TextBlock x:Name="RamPercentText"
                               Text="0%"
                               FontSize="14"
                               Foreground="#6ee7b7"/>
                </StackPanel>
            </Border>

            <!-- CPU Usage Card -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="CPU USAGE" FontWeight="Bold" FontSize="12" Foreground="#9ca3af" Margin="0,0,0,5"/>
                    <TextBlock x:Name="CpuUsageText"
                               Text="0%"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <ProgressBar x:Name="CpuProgressBar"
                                 Height="8"
                                 Margin="0,8,0,5"
                                 Foreground="#3b82f6"
                                 Background="#374151"/>
                    <TextBlock x:Name="CpuCoresText"
                               Text="6 cores"
                               FontSize="14"
                               Foreground="#93c5fd"/>
                </StackPanel>
            </Border>

            <!-- Terminals Running Card -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="TERMINALS RUNNING" FontWeight="Bold" FontSize="12" Foreground="#9ca3af" Margin="0,0,0,5"/>
                    <TextBlock x:Name="TerminalCountText"
                               Text="0 / 6"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <ProgressBar x:Name="TerminalProgressBar"
                                 Height="8"
                                 Margin="0,8,0,5"
                                 Foreground="#8b5cf6"
                                 Background="#374151"/>
                    <TextBlock x:Name="TerminalStatusText"
                               Text="Safe to add more"
                               FontSize="14"
                               Foreground="#c4b5fd"/>
                </StackPanel>
            </Border>

            <!-- System Status Card -->
            <Border Grid.Column="3" x:Name="SystemStatusCard" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="SYSTEM STATUS" FontWeight="Bold" FontSize="12" Foreground="#9ca3af" Margin="0,0,0,5"/>
                    <TextBlock x:Name="SystemStatusText"
                               Text="HEALTHY"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#10b981"/>
                    <TextBlock x:Name="SystemStatusDetailText"
                               Text="All systems normal"
                               FontSize="12"
                               Foreground="#9ca3af"
                               Margin="0,5,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Charts Panel -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- RAM Chart -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="RAM USAGE HISTORY"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="#e5e7eb"
                                   Margin="0,0,0,10"/>
                        <lvc:CartesianChart x:Name="RamChart"
                                            Height="200"
                                            Background="Transparent"
                                            Foreground="#9ca3af"
                                            LegendLocation="None"/>
                    </StackPanel>

                    <!-- CPU Chart -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="CPU USAGE HISTORY"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Foreground="#e5e7eb"
                                   Margin="0,0,0,10"/>
                        <lvc:CartesianChart x:Name="CpuChart"
                                            Height="200"
                                            Background="Transparent"
                                            Foreground="#9ca3af"
                                            LegendLocation="None"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Terminals List Panel -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="RUNNING TERMINALS"
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#e5e7eb"
                               Margin="0,0,0,10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                        <ItemsControl x:Name="TerminalsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1f2937"
                                            BorderBrush="#374151"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="10"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding Name}"
                                                       FontWeight="Bold"
                                                       FontSize="13"
                                                       Foreground="White"/>
                                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="RAM: " Foreground="#9ca3af" FontSize="11"/>
                                                <TextBlock Text="{Binding RamUsage}" Foreground="#6ee7b7" FontSize="11"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="CPU: " Foreground="#9ca3af" FontSize="11"/>
                                                <TextBlock Text="{Binding CpuUsage}" Foreground="#93c5fd" FontSize="11"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Button x:Name="AddTerminalButton"
                            Content="+ Add New Terminal"
                            Click="AddTerminalButton_Click"
                            Background="#10b981"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="0,10,0,0"
                            FontWeight="Bold"
                            Cursor="Hand"/>

                    <Button x:Name="StopAllButton"
                            Content="⏹ Stop All Terminals"
                            Click="StopAllButton_Click"
                            Background="#ef4444"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10"
                            Margin="0,5,0,0"
                            FontWeight="Bold"
                            Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer Status Bar -->
        <Border Grid.Row="3" Background="#1a1a1a" BorderBrush="#374151" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse x:Name="ConnectionStatusIndicator"
                             Width="12"
                             Height="12"
                             Fill="#10b981"
                             Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusBarText"
                               Text="Connected | Last update: 00:00:00"
                               FontSize="12"
                               Foreground="#9ca3af"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                           Text="Scalperium v1.0 | Refresh interval: 5s"
                           FontSize="11"
                           Foreground="#6b7280"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
